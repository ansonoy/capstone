// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("postgresql://postgres:password@localhost:5432/whispering_dutchman")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
}

model Order {
  id        Int @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
}
